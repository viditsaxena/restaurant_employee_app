<h3>Edit a specific party</h3>

<div class="row">


     <form class="form" action="/parties/<%= @party.id %>" method="post">
       <input type="hidden" name="_method" value="put">
       <input type="text" name="party[number_of_people]" value="<%=@party.number_of_people%>">
       <input type="text" name="party[special_request]" value="<%=@party.special_request%>">
       <input type="text" name="party[has_paid]" value="<%=@party.has_paid%>">
       <input type="text" name="party[stand_number]" value="<%=@party.stand_number%>">
<div class="col s6">
       <button class="btn-large waves-effect waves-light" type="submit" name="action">Update Party
      <i class="material-icons"></i>
       </button>
    </form>
  </div>


  <div class="col s6">

<form action="/parties/<%= @party.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn-large waves-effect waves-light" type="submit" name="action">Delete Party
      <i class="material-icons"></i>
  </button>
</form>

 </div>
</div>
